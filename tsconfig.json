{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "public",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "noEmitOnError": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.generator"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "node",
      "react",
      "react-dom",
      "react-redux",
      "redux-devtools",
      "enzyme",
      "cheerio",
      "react-addons-test-utils",
      "react-test-renderer",
      "redux-mock-store",
      "nock"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}