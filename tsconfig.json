{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "public",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "noEmitOnError": false,
    "importHelpers":true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.generator"
